<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AlertDialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>   <!--提示框是否有边框-->
        <item name="android:windowIsFloating">true</item>   <!--提示框是否是浮动的-->
        <item name="android:windowIsTranslucent">true</item>    <!--提示框是不是透明的-->
        <item name="android:windowNoTitle">true</item>  <!--提示框是否有标题-->
        <item name="android:windowBackground">@android:color/transparent</item> <!--提示框的背景颜色是什么-->
        <item name="android:windowContentOverlay">@null</item>  <!--是否有遮盖 -->
        <item name="android:backgroundDimEnabled">true</item>   <!--是否充许对话框的背景变暗。为true则充许变暗-->
        <item name="android:backgroundDimAmount">0.3</item>     <!--对话框的背景灰度-->
    </style>

    <!-- 通用错误页面的样式 -->
    <style name="MultipleStatusView" />

    <style name="MultipleStatusView.Content">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textColor">#a9b7b7</item>
        <item name="android:textSize">16sp</item>
    </style>

    <declare-styleable name="MNHudProgressWheel">
        <attr name="mn_progressIndeterminate" format="boolean" />
        <attr name="mn_barColor" format="color" />
        <attr name="mn_rimColor" format="color" />
        <attr name="mn_rimWidth" format="dimension" />
        <attr name="mn_spinSpeed" format="float" />
        <attr name="mn_barSpinCycleTime" format="integer" />
        <attr name="mn_circleRadius" format="dimension" />
        <attr name="mn_fillRadius" format="boolean" />
        <attr name="mn_barWidth" format="dimension" />
        <attr name="mn_linearProgress" format="boolean" />
    </declare-styleable>

    <!-- 自定义Dialog -->
    <style name="MNCustomDialog" parent="@android:style/Theme.Dialog">
        <!-- 无边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <!--无遮罩效果-->
        <item name="android:backgroundDimEnabled">false</item>
    </style>

</resources>