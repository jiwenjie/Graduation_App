<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="theme">
        <attr name="appbg" format="reference"/>
        <attr name="press_color" format="reference"/>
        <attr name="play_bar_color" format="reference"/>
        <attr name="accent_color" format="reference"/>
        <attr name="divider" format="reference"/>
        <attr name="image_tint" format="reference"/>
        <attr name="my_selector_layout" format="reference"/>
        <attr name="text_color" format="color"/>
    </declare-styleable>

    <declare-styleable name="ClearEditText">
        <!-- 是否展示底部线：默认显示 -->
        <attr name="clear_showBottomLine" format="boolean" />
        <!-- 底部线的颜色 -->
        <attr name="clear_bottomLineColor" format="color" />
        <!-- 底部线的宽度 -->
        <attr name="clear_bottomLine_width" format="dimension" />
        <!-- 左边图片的大小 -->
        <attr name="clear_leftDrawableSize" format="dimension" />
        <!-- 是否显示右边删除按钮：默认显示 -->
        <attr name="clear_disableClear" format="boolean" />
        <!-- 右边图片的大小 -->
        <attr name="clear_rightDrawableSize" format="dimension" />
    </declare-styleable>

    <declare-styleable name="PasswordView">
        <attr name="mode" format="integer"/>                <!-- 模式 -->
        <attr name="passwordLength" format="integer"/>      <!-- 密码长度 -->
        <attr name="cursorFlashTime" format="integer"/>     <!-- 光标刷新时间 -->
        <attr name="borderWidth" format="dimension"/>       <!-- 边线宽度 -->
        <attr name="borderColor" format="color"/>           <!-- 边线颜色 -->
        <attr name="cursorColor" format="color"/>           <!-- 广标颜色 -->
        <attr name="isCursorEnable" format="boolean"/>      <!-- 是否禁用 -->
        <attr name="passwordPadding" format="dimension"/>   <!-- 密码间距 -->
        <attr name="cipherEnable" format="boolean"/>        <!-- 模式 -->
    </declare-styleable>

</resources>
















