<resources>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>   <!-- 去除 ActionBar -->
        <item name="windowNoTitle">true</item>      <!-- 去除标题 -->

        <item name="colorPrimary">@color/transparent</item>
        <!-- 状态栏和导航栏都会显示成半透明的状态。并且布局会拓展到系统栏的后面。 -->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="AppTheme.NoActionBar.FullScreen">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="CompatAppTheme" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowActionBar">false</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:textAllCaps">false</item>
        <item name="android:windowActionBar">false</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowAnimationStyle">@style/AnimationActivity</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="AppTheme" parent="AppBaseTheme">

    </style>

    <style name="AnimationActivity" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>

    <!-- 约束布局的样式，左右部分 -->
    <style name="ConstraintStartAndEndStyle">
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
    </style>

    <!--&lt;!&ndash; 约束布局的样式，左右上部分 &ndash;&gt;-->
    <style name="ConstraintStartEndAndTop" parent="ConstraintStartAndEndStyle">
        <item name="layout_constraintTop_toTopOf">parent</item>
    </style>

    <!--&lt;!&ndash; 约束布局的样式，四周部分 &ndash;&gt;-->
    <style name="ConstraintStartEndTopAndBottom" parent="ConstraintStartEndAndTop">
        <item name="layout_constraintBottom_toBottomOf">parent</item>
    </style>

    <!-- InputLayout 的 style -->
    <style name="InputStyle">
        <item name="android:textColor">@color/alpha_90_white</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textColor">@color/alpha_90_white</item>
        <item name="android:textCursorDrawable">@null</item>    <!-- 设置 EditText 光标和字同色 -->
        <item name="android:textSize">@dimen/common_sp_16</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textView_style">
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">60dp</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/alpha_85_black</item>
        <item name="android:textSize">30dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- style root (add attribute fitsSystemWindows="true") -->
    <style name="Roots">
        <item name="android:fitsSystemWindows">true</item>
        <!-- this attribute is can make recyclerView's item can under the toolbar -->
        <item name="android:clipToPadding">false</item>
    </style>

    <style name="AppTheme.Label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/common_sp_14</item>
        <item name="android:textColor">@color/color_gray</item>
    </style>

    <style name="AppTheme.Label.Title">
        <item name="android:textColor">@color/color_black</item>
        <item name="android:textSize">@dimen/common_sp_16</item>
    </style>

    <style name="AppTheme.Label.Description">
        <item name="android:gravity">top</item>
        <item name="android:lineSpacingExtra">@dimen/common_5dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/common_sp_14</item>
        <item name="android:singleLine">false</item>
    </style>

    <style name="AppTheme.Label.Layout">
        <item name="android:paddingTop">@dimen/padding_common_v</item>
        <item name="android:paddingBottom">@dimen/padding_common_v</item>
        <item name="android:paddingStart">@dimen/padding_common_h</item>
        <item name="android:paddingEnd">@dimen/padding_common_h</item>
    </style>

    <style name="AppTheme.DiverLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:dividerHeight">0.5dp</item>
        <item name="android:divider">@color/color_division_line</item>
        <item name="android:background">@color/color_division_line</item>
    </style>

</resources>
