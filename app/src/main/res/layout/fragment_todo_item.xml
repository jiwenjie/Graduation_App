<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/line_1px"
    android:background="@color/color_white"
    android:padding="@dimen/dp_8">

    <TextView
        android:id="@+id/fragment_todo_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        tools:text="标题标题" />

    <TextView
        android:id="@+id/fragment_todo_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:paddingBottom="@dimen/dp_4"
        android:textSize="@dimen/common_sp_14"
        app:layout_constraintTop_toBottomOf="@id/fragment_todo_item_title"
        tools:text="时间时间" />

    <TextView
        android:id="@+id/fragment_todo_item_complete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dp_4"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/common_sp_14"
        app:layout_constraintBaseline_toBaselineOf="@id/fragment_todo_item_time"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="已完成" />

</android.support.constraint.ConstraintLayout>