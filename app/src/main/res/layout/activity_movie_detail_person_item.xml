<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_person"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:orientation="horizontal"
        android:paddingStart="@dimen/common_10dp"
        android:paddingTop="@dimen/common_10dp"
        android:paddingEnd="@dimen/common_5dp"
        android:paddingBottom="@dimen/common_10dp">

        <ImageView
            android:id="@+id/iv_avatar_photo"
            android:layout_width="70dp"
            android:layout_height="90dp"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/common_10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_person_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/alpha_80_black"
                android:textSize="@dimen/common_sp_18"
                tools:text="啊擦拭擦拭" />

            <TextView
                android:id="@+id/tv_person_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_15dp"
                android:textColor="@color/alpha_60_black"
                android:textSize="@dimen/common_sp_16"
                tools:text="acasc" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/ll_item"
        android:background="@color/color_division_line"
        tools:ignore="UnknownIdInLayout" />
</RelativeLayout>