<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_click"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="3dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="@dimen/common_5dp"
    android:foreground="@drawable/item_touch_bg"
    app:cardCornerRadius="6dp"
    app:cardElevation="4dp"
    app:contentPadding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/iv_item_image"
            android:layout_width="100dp"
            android:layout_height="132dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/ic_vector_image_load_before" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_item_title"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_25dp"
                android:layout_marginStart="@dimen/common_5dp"
                android:layout_marginBottom="@dimen/common_5dp"
                android:textColor="@color/txt_black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_item_author"
                style="@style/BookItemStyle" />

            <TextView
                android:id="@+id/tv_item_publisher"
                style="@style/BookItemStyle" />

            <TextView
                android:id="@+id/tv_item_pubdate"
                style="@style/BookItemStyle" />

            <TextView
                android:id="@+id/tv_item_rate"
                style="@style/BookItemStyle" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
