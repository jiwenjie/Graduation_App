<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    android:gravity="bottom"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/ll_movie_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/common_10dp"
        android:background="@color/alpha_80_white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_img"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:scaleType="centerCrop"
            android:src="@drawable/top_movie_head_bg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/common_10dp"
            android:layout_toEndOf="@+id/iv_img"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="豆瓣电影Top250"
                android:textColor="@color/alpha_80_black"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_10dp"
                android:text="从前现在过去了再不来~"
                android:textColor="@color/alpha_60_black"
                android:textSize="@dimen/common_sp_12" />

        </LinearLayout>

        <ImageView
            android:layout_width="@dimen/common_25dp"
            android:layout_height="@dimen/common_25dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/common_20dp"
            android:src="@drawable/right_arrow" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="8dp"
        android:paddingBottom="@dimen/common_5dp">

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="@dimen/common_18dp"
            android:layout_height="@dimen/common_25dp"
            app:srcCompat="@drawable/ic_vector_head_vertical_line" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="热映榜"
            android:textColor="@color/alpha_85_black"
            android:textSize="@dimen/common_sp_18" />
    </LinearLayout>
</LinearLayout>
